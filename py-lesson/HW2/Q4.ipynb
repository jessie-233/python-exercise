    "i = 1\n",
    "aver = 0\n",
    "sum = 0\n",
    "while i != 0:\n",
    "    count += 1\n",
    "    i = eval(input('enter a number: '))\n",
    "    sum += i\n",
    "if count == 0:\n",
    "    print('输入错误')\n",
    "else:\n",
    "    aver = sum / count\n",
    "    print('平均值为：%.2f'%aver)    "
